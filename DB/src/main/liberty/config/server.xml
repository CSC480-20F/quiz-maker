<server description="Liberty server">
    <featureManager>
        <feature>microProfile-3.2</feature>
        <feature>jaxrs-2.1</feature>
    </featureManager>

    <httpEndpoint host="*" httpPort="${default.http.port}" 
        httpsPort="${default.https.port}" id="defaultHttpEndpoint"/>
    
    <webApplication location="DBServer.war" contextRoot="${app.context.root}"/>

    <cors domain="/users/testing-input"
      allowedOrigins="http://localhost:9080"
      allowedMethods="POST, GET, DELETE"
      allowedHeaders="accept, MyRequestHeader1"
      exposeHeaders="MyResponseHeader1"
      allowCredentials="true"
      maxAge="3600" />

      <cors domain="/users/all"
      allowedOrigins="http://localhost:9080"
      allowedMethods="GET, DELETE, POST"
      allowedHeaders="accept, MyRequestHeader1"
      exposeHeaders="MyResponseHeader1"
      allowCredentials="true"
      maxAge="3600" />

</server>
