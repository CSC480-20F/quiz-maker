<server description="Liberty server">
    <featureManager>
        <feature>mpJwt-1.1</feature>
        <feature>microProfile-3.2</feature>
        <feature>jaxrs-2.1</feature>
        <feature>jsonp-1.1</feature>
        <feature>cdi-2.0</feature>
        <feature>appSecurity-3.0</feature>
    </featureManager>

    <httpEndpoint host="*" httpPort="${default.http.port}"
        httpsPort="${default.https.port}" id="defaultHttpEndpoint"/>

    <webApplication location="UsersServer.war" contextRoot="${app.context.root}"/>

    <keyStore id="defaultKeyStore" location="keystore.jceks" type="JCEKS"
              password="secret" />

    <mpJwt id="jwtUserConsumer" keyName="default" audiences="simpleapp"
           issuer="${jwt.issuer}"/>
    <!-- http://localhost:9080 -->
    <cors domain="/users"
      allowedOrigins="*"
      allowedMethods="POST, GET, DELETE, PUT"
      allowedHeaders="origin, content-type, accept, authorization, cache-control"
      maxAge="3600" />

</server>
